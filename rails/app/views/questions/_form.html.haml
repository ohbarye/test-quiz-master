= form_for @question do |f|

  - if @question.errors.present?
    .alert.alert-danger
      - @question.errors.full_messages.each do |message|
        .message= message

  .form-group
    = f.label :question
    = f.text_area :question, class: 'form-control', rows: 5
    %li= 'You can use <b>, <u>, <h1> ~ <h6> tags.'
    %li= 'Only the 1st line will be displayed in the questions list.'

  .form-group
    = f.label :answer
    = f.text_field :answer, class: 'form-control'

  = f.submit nil, class: 'btn btn-primary'
